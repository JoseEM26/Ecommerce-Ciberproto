@model WebFront.Models.UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Tienda - CiberProto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #212529;
            height: 100vh;
            display: flex;
            align-items: center;
        }
        /* Fondo oscuro como el navbar */
        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

        .btn-login {
            border-radius: 10px;
            padding: 12px;
            font-weight: bold;
            background-color: #0d6efd;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="text-center mb-4 text-white">
                    <i class="bi bi-cart-check-fill text-info" style="font-size: 3rem;"></i> <h2 class="fw-bold">Tienda CiberProto</h2>
                    <p class="text-muted">Inicia sesión para realizar tus compras</p>
                </div>

                <div class="card login-card">
                    <div class="card-body p-4">
                        @if (ViewBag.mensaje != null)
                        {
                            <div class="alert alert-danger small py-2">
                                <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.mensaje
                            </div>
                        }

                        <form asp-action="Login" method="post">
                            <input type="hidden" name="origen" value="TIENDA" />

                            <div class="mb-3">
                                <label class="form-label small fw-bold">CORREO DEL CLIENTE</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="correo" class="form-control border-start-0 bg-light" placeholder="tu-correo@ejemplo.com" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label small fw-bold">CONTRASEÑA</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-key"></i></span>
                                    <input type="password" name="clave" class="form-control border-start-0 bg-light" placeholder="••••••••" required />
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-info btn-login text-white shadow-sm">
                                    Ingresar a la Tienda
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>