@model IEnumerable<WebFront.Models.ProductoModel>

@{
    ViewData["Title"] = "Inventario";
    int paginaActual = ViewBag.PaginaActual ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold mb-0 text-dark">Inventario de Productos</h2>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Nuevo Producto
    </a>
</div>

<div class="card border-0 shadow-sm mb-4 bg-light">
    <div class="card-body py-3">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="small fw-bold text-muted">Nombre</label>
                <input type="text" name="nombre" class="form-control form-control-sm" placeholder="Buscar por nombre..." value="@ViewBag.NombreActual" />
            </div>
            <div class="col-md-3">
                <label class="small fw-bold text-muted">Marca</label>
                <select name="idMarca" class="form-select form-select-sm" asp-items="ViewBag.Marcas">
                    <option value="">Todas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="small fw-bold text-muted">Categoría</label>
                <select name="idCategoria" class="form-select form-select-sm" asp-items="ViewBag.Categorias">
                    <option value="">Todas</option>
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-search me-1"></i> Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-white border-bottom">
                    <tr>
                        <th class="ps-4">Producto</th>
                        <th>Marca / Categoría</th>
                        <th>Precio</th>
                        <th class="text-center">Stock</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-search fs-1 d-block mb-2"></i>
                                No se encontraron productos con esos filtros.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="ratio ratio-1x1 rounded border bg-white me-3 d-flex align-items-center justify-content-center" style="width: 45px;">
                                            @if (!string.IsNullOrEmpty(item.UrlImagen))
                                            {
                                                <img src="@item.UrlImagen" alt="" style="object-fit: contain;" class="p-1">
                                            }
                                            else
                                            {
                                                <i class="bi bi-image text-muted"></i>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark text-truncate" style="max-width: 250px;">@item.Nombre</div>
                                            <small class="text-muted">ID: #@item.IdProducto</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.NombreMarca</span>
                                    <span class="badge bg-light text-dark border">@item.NombreCategoria</span>
                                </td>
                                <td class="fw-bold text-success">
                                    S/ @item.Precio.ToString("N2")
                                </td>
                                <td class="text-center">
                                    @if (item.Stock < 5)
                                    {
                                        <span class="text-danger fw-bold small">@item.Stock (Bajo)</span>
                                    }
                                    else
                                    {
                                        <span class="text-dark small">@item.Stock</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        @if (item.Activo)
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('¿Deseas desactivar este producto?');" title="Desactivar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activar" asp-route-id="@item.IdProducto" class="btn btn-sm btn-outline-success"
                                               onclick="return confirm('¿Restaurar este producto al catálogo?');" title="Restaurar / Activar">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* SECCIÓN DE PAGINACIÓN *@
    @if (totalPaginas > 1)
    {
        <div class="card-footer bg-light border-top">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="text-muted small">
                    Mostrando @((paginaActual - 1) * 10 + 1) - @Math.Min(paginaActual * 10, totalRegistros) de @totalRegistros productos
                </div>

                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @* Botón Anterior *@
                        @if (paginaActual > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GenerarUrlPaginacion(paginaActual - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @* Números de página *@
                        @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
                        {
                            <li class="page-item @(i == paginaActual ? "active" : "")">
                                <a class="page-link" href="@GenerarUrlPaginacion(i)">@i</a>
                            </li>
                        }

                        @* Botón Siguiente *@
                        @if (paginaActual < totalPaginas)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GenerarUrlPaginacion(paginaActual + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@* FUNCIÓN PARA GENERAR URLs DE PAGINACIÓN *@
@functions {
    string GenerarUrlPaginacion(int pagina)
    {
        return Url.Action("Index", new
        {
            nombre = ViewBag.NombreActual,
            idMarca = ViewBag.MarcaActual,
            idCategoria = ViewBag.CategoriaActual,
            pagina
        });
    }
}