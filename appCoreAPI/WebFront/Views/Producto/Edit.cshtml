@model WebFront.Models.ProductoModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Editar Producto</h2>
        <span class="text-muted">Modificando ID: <strong>#@Model.IdProducto</strong></span>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-xl-10">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdProducto" />

                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="Nombre" class="form-label fw-bold small text-muted">NOMBRE DEL PRODUCTO</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Descripcion" class="form-label fw-bold small text-muted">DESCRIPCIÓN</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="IdMarca" class="form-label fw-bold small text-muted">MARCA</label>
                            <select asp-for="IdMarca" class="form-select" asp-items="ViewBag.Marcas">
                                <option value="">-- Seleccione Marca --</option>
                            </select>
                            <span asp-validation-for="IdMarca" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="IdCategoria" class="form-label fw-bold small text-muted">CATEGORÍA</label>
                            <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.Categorias">
                                <option value="">-- Seleccione Categoría --</option>
                            </select>
                            <span asp-validation-for="IdCategoria" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Precio" class="form-label fw-bold small text-muted">PRECIO (S/)</label>
                            <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Stock" class="form-label fw-bold small text-muted">STOCK</label>
                            <input asp-for="Stock" type="number" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 d-flex align-items-end">
                            <div class="form-check form-switch p-2 border rounded w-100 bg-light">
                                <input class="form-check-input ms-0 me-2" type="checkbox" asp-for="Activo">
                                <label class="form-check-label fw-bold" asp-for="Activo">Producto Activo</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="UrlImagen" class="form-label fw-bold small text-muted">URL IMAGEN</label>
                            <input asp-for="UrlImagen" class="form-control" placeholder="https://..." />
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning px-4 fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>