@model IEnumerable<WebFront.Models.ProductoModel>

@{
    ViewData["Title"] = "Reporte de Inventario";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Reporte de Inventario</h2>
        <span class="text-muted">Consulta de stock en tiempo real (gRPC)</span>
    </div>

    <div class="d-flex align-items-center gap-3">
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-2"></i> Volver a Ventas
        </a>

        <div class="text-end border-start ps-3">
            <h4 class="fw-bold text-primary mb-0">@Model.Sum(x => x.Stock)</h4>
            <small class="text-muted">UNIDADES TOTALES</small>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-3">
        <form asp-action="Inventario" method="get" class="row g-2">
            <div class="col-md-10">
                <input type="text" name="busqueda" class="form-control" placeholder="Buscar por producto o marca..." value="@ViewBag.Busqueda" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100 shadow-sm">
                    <i class="bi bi-search me-2"></i> Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 table-striped">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="ps-4">Producto</th>
                    <th>Marca</th>
                    <th>Categoría</th>
                    <th>Precio Unit.</th>
                    <th class="text-center">Stock</th>
                    <th class="text-end pe-4">Valor Inventario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">@item.Nombre</td>
                        <td><span class="badge bg-light text-dark border">@item.NombreMarca</span></td>
                        <td>@item.NombreCategoria</td>
                        <td>S/ @item.Precio.ToString("N2")</td>
                        <td class="text-center">
                            @if (item.Stock < 5)
                            {
                                <span class="badge bg-danger">@item.Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-success bg-opacity-75">@item.Stock</span>
                            }
                        </td>
                        <td class="text-end pe-4 fw-bold text-muted">
                            S/ @((item.Precio * item.Stock).ToString("N2"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>