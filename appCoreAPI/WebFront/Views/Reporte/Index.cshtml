@model IEnumerable<WebFront.Models.VentaModel>

@{
    ViewData["Title"] = "Reporte de Ventas";

    string filtroActual = ViewBag.TipoFiltro as string ?? "todos";
    int paginaActual = ViewBag.PaginaActual ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
    int totalRegistros = ViewBag.TotalRegistros ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Reporte de Ventas</h2>
        <span class="text-muted">Consulta histórica mediante gRPC</span>
    </div>

    <div class="d-flex gap-3">
        <a asp-action="Inventario" class="btn btn-outline-dark shadow-sm">
            <i class="bi bi-box-seam me-2"></i> Ver Inventario
        </a>
        <div class="text-end border-start ps-3">
            <h4 class="fw-bold text-success mb-0">
                S/ @Model.Sum(x => x.MontoTotal).ToString("N2")
            </h4>
            <small class="text-muted">TOTAL EN PANTALLA</small>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-3">
        <form asp-action="Filtrar" method="get" id="formReportes">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">TIPO DE REPORTE</label>
                    <select name="tipoFiltro" id="comboFiltro" class="form-select border-primary">
                        <!option value="todos" @(filtroActual == "todos" ? "selected" : "")>-- Ver Todo --</!option>
                        <!option value="fechas" @(filtroActual == "fechas" ? "selected" : "")>Por Rango de Fechas</!option>
                        <!option value="cliente" @(filtroActual == "cliente" ? "selected" : "")>Por Cliente</!option>
                        <!option value="producto" @(filtroActual == "producto" ? "selected" : "")>Por Producto</!option>
                    </select>
                </div>

                <div class="col-md-6 filtro-section" id="filtro-fechas" style="display:none;">
                    <div class="input-group">
                        <span class="input-group-text bg-white">Desde</span>
                        <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
                        <span class="input-group-text bg-white">Hasta</span>
                        <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
                    </div>
                </div>

                <div class="col-md-4 filtro-section" id="filtro-cliente" style="display:none;">
                    <select name="idUsuario" class="form-select" asp-items="ViewBag.Clientes">
                        <option value="">-- Seleccione Cliente --</option>
                    </select>
                </div>

                <div class="col-md-4 filtro-section" id="filtro-producto" style="display:none;">
                    <input type="text" name="nombreProducto" class="form-control" placeholder="Escriba el nombre del producto..." value="@ViewBag.NombreProducto" />
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        <i class="bi bi-search me-2"></i> Consultar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 table-striped">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Producto</th>
                        <th class="text-center">Cant.</th>
                        <th>Transacción</th>
                        <th class="text-end pe-4">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-clipboard-data fs-1 d-block mb-3"></i>
                                No hay resultados para mostrar.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#@item.IdVenta</td>
                                <td>
                                    <i class="bi bi-calendar3 me-1 text-muted"></i>
                                    @(DateTime.TryParse(item.Fecha, out DateTime d) ? d.ToString("dd/MM/yyyy") : item.Fecha)
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Cliente</div>
                                    <small class="text-muted" style="font-size:0.75rem">
                                        <i class="bi bi-telephone me-1"></i>@item.Telefono
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.Producto</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">@item.Cantidad</span>
                                </td>
                                <td class="text-muted small">
                                    <code>@item.IdTransaccion</code>
                                </td>
                                <td class="text-end pe-4 fw-bold text-success">
                                    S/ @item.MontoTotal.ToString("N2")
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* SECCIÓN DE PAGINACIÓN *@
    @if (totalPaginas > 1)
    {
        <div class="card-footer bg-light border-top">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="text-muted small">
                    Mostrando @((paginaActual - 1) * 10 + 1) - @Math.Min(paginaActual * 10, totalRegistros) de @totalRegistros registros
                </div>
                
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @* Botón Anterior *@
                        @if (paginaActual > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GenerarUrlPaginacion(paginaActual - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @* Números de página *@
                        @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
                        {
                            <li class="page-item @(i == paginaActual ? "active" : "")">
                                <a class="page-link" href="@GenerarUrlPaginacion(i)">@i</a>
                            </li>
                        }

                        @* Botón Siguiente *@
                        @if (paginaActual < totalPaginas)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GenerarUrlPaginacion(paginaActual + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@* FUNCIÓN PARA GENERAR URLs DE PAGINACIÓN *@
@functions {
    string GenerarUrlPaginacion(int pagina)
    {
        string tipoFiltro = ViewBag.TipoFiltro as string;

        if (string.IsNullOrEmpty(tipoFiltro) || tipoFiltro == "todos")
        {
            return Url.Action("Index", new { pagina });
        }
        else
        {
            return Url.Action("Filtrar", new
            {
                tipoFiltro = ViewBag.TipoFiltro,
                fechaInicio = ViewBag.FechaInicio,
                fechaFin = ViewBag.FechaFin,
                idUsuario = ViewBag.IdUsuario,
                nombreProducto = ViewBag.NombreProducto,
                pagina
            });
        }
    }
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const combo = document.getElementById("comboFiltro");
            const secciones = document.querySelectorAll(".filtro-section");

            function actualizarFiltros() {
                secciones.forEach(el => el.style.display = "none");

                const valor = combo.value;
                const target = document.getElementById("filtro-" + valor);
                if (target) {
                    target.style.display = "block";
                }
            }

            actualizarFiltros();

            combo.addEventListener("change", actualizarFiltros);
        });
    </script>
}