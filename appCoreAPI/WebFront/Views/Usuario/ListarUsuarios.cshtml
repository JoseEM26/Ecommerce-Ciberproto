@model IEnumerable<WebFront.Models.UsuarioModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Usuarios</h2>
        <span class="text-muted">Administración de cuentas de acceso</span>
    </div>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-2"></i> Nuevo Usuario
    </a>
</div>

<div class="card mb-4 border-0 shadow-sm bg-light">
    <div class="card-body py-3">
        <form asp-action="ListarUsuarios" asp-controller="Usuario" method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label fw-bold"><i class="bi bi-funnel"></i> Filtrar:</label>
            </div>
            <div class="col-auto">
                <div class="input-group">
                    <span class="input-group-text bg-white text-muted border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="nombre" class="form-control border-start-0 ps-0" placeholder="Buscar por apellidos..." value="@ViewContext.HttpContext.Request.Query["nombre"]">
                    <button type="submit" class="btn btn-dark">Buscar</button>
                </div>
            </div>
            <div class="col-auto ms-auto">
                <a asp-action="ListarUsuarios" class="btn btn-outline-secondary btn-sm" title="Recargar">
                    <i class="bi bi-arrow-clockwise"></i> Limpiar
                </a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Usuario</th>
                <th scope="col">Contacto</th>
                <th scope="col">Rol</th>
                <th scope="col" class="text-center">Estado</th>
                <th scope="col">Registro</th>
                <th scope="col" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        No se encontraron usuarios registrados.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-secondary">#@item.IdUsuario</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    @item.Nombres.Substring(0, 1)@item.Apellidos.Substring(0, 1)
                                </div>
                                <div>
                                    <div class="fw-bold">@item.Nombres @item.Apellidos</div>
                                    <div class="text-muted small">@item.Correo</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Telefono))
                            {
                                <span class="text-nowrap"><i class="bi bi-telephone-fill text-muted me-1"></i> @item.Telefono</span>
                            }
                            else
                            {
                                <span class="text-muted small">Sin teléfono</span>
                            }
                        </td>
                        <td>
                            @if (item.Rol.ToUpper() == "ADMIN")
                            {
                                <span class="badge bg-dark"><i class="bi bi-shield-lock me-1"></i> ADMIN</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">CLIENTE</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.Activo)
                            {
                                <span class="badge bg-success bg-opacity-75"><i class="bi bi-check-circle me-1"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-75"><i class="bi bi-x-circle me-1"></i> Inactivo</span>
                            }
                        </td>
                        <td class="text-muted small">
                            <i class="bi bi-calendar3 me-1"></i> @item.FechaRegistro.ToString("dd/MM/yyyy")
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                @* <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a> 
                                *@
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>