@model WebFront.Models.UsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - CiberProto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #212529;
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }

        .register-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

        .btn-register {
            border-radius: 10px;
            padding: 12px;
            font-weight: bold;
            background-color: #0dcaf0;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="text-center mb-4 text-white">
                    <i class="bi bi-person-plus-fill text-info" style="font-size: 3rem;"></i>
                    <h2 class="fw-bold">Crea tu Cuenta</h2>
                    <p class="text-muted">Únete a CiberProto y gestiona tus compras</p>
                </div>

                <div class="card register-card">
                    <div class="card-body p-4">
                        @if (ViewBag.mensaje != null)
                        {
                            <div class="alert alert-danger small py-2">
                                <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.mensaje
                            </div>
                        }

                        <form asp-action="RegistroCliente" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label small fw-bold">NOMBRES</label>
                                    <input asp-for="Nombres" class="form-control bg-light" placeholder="Juan" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label small fw-bold">APELLIDOS</label>
                                    <input asp-for="Apellidos" class="form-control bg-light" placeholder="Pérez" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold">CORREO ELECTRÓNICO</label>
                                <input asp-for="Correo" type="email" class="form-control bg-light" placeholder="correo@ejemplo.com" required />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label small fw-bold">TELÉFONO</label>
                                    <input asp-for="Telefono" class="form-control bg-light" placeholder="987654321" />
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="form-label small fw-bold">CONTRASEÑA</label>
                                    <input asp-for="Clave" type="password" class="form-control bg-light" placeholder="••••••••" required />
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-register shadow-sm border-0">
                                    Crear mi cuenta
                                </button>
                            </div>
                            
                            <div class="text-center">
                                <p class="text-muted small">
                                    ¿Ya tienes cuenta?
                                    <a asp-action="LoginCliente" asp-controller="UsuarioLogin" class="text-info fw-bold text-decoration-none">Inicia sesión</a>
                                </p>
                            </div>

                            <a asp-action="Index" asp-controller="Tienda" class="text-muted small text-decoration-none d-block mt-2">
                                <i class="bi bi-arrow-left me-1"></i> Volver a la Tienda
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>