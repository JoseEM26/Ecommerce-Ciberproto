@model ContactoModel
@{
    Layout = "_LayoutCliente";
    ViewData["Title"] = "Contacto";
}

<style>
    .contact-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0;
        border-radius: 20px;
        margin-bottom: 50px;
        text-align: center;
    }

        .contact-hero h1 {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 15px;
        }

    .contact-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,.1);
        height: 100%;
    }

    .info-item {
        display: flex;
        align-items: start;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 15px;
        margin-bottom: 20px;
        transition: 0.3s;
    }

        .info-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

    .info-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
        margin-right: 20px;
        flex-shrink: 0;
    }

    .info-content h5 {
        font-weight: 700;
        margin-bottom: 5px;
        color: #333;
    }

    .info-content p {
        margin: 0;
        color: #666;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102,126,234,.25);
        }

    .btn-submit {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 15px 40px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102,126,234,.4);
        }

    .alert-custom {
        border-radius: 15px;
        padding: 20px;
        border: none;
    }
</style>

<!-- Hero -->
<div class="contact-hero">
    <div class="container">
        <h1><i class="bi bi-envelope-heart"></i> Contáctanos</h1>
        <p class="lead">Estamos aquí para ayudarte. Envíanos tu mensaje</p>
    </div>
</div>

<div class="container">
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success alert-custom mb-4" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["MensajeExito"]
        </div>
    }

    <div class="row g-4">
        <!-- Información de Contacto -->
        <div class="col-lg-4">
            <div class="contact-card">
                <h3 class="fw-bold mb-4">Información</h3>

                <div class="info-item">
                    <div class="info-icon">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <div class="info-content">
                        <h5>Dirección</h5>
                        <p>Av. Javier Prado Este 4200<br>San Isidro, Lima - Perú</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <i class="bi bi-telephone-fill"></i>
                    </div>
                    <div class="info-content">
                        <h5>Teléfono</h5>
                        <p>+51 999 888 777<br>+51 1 234 5678</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <div class="info-content">
                        <h5>Email</h5>
                        <p>info@ciberproto.com<br>ventas@ciberproto.com</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <i class="bi bi-clock-fill"></i>
                    </div>
                    <div class="info-content">
                        <h5>Horario</h5>
                        <p>Lun - Vie: 9:00 AM - 7:00 PM<br>Sábados: 10:00 AM - 2:00 PM</p>
                    </div>
                </div>

                <!-- Redes Sociales -->
                <div class="mt-4">
                    <h5 class="fw-bold mb-3">Síguenos</h5>
                    <div class="d-flex gap-3">
                        <a href="https://www.facebook.com/" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://x.com/" class="btn btn-outline-info btn-lg">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="https://www.instagram.com/" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://web.whatsapp.com/" class="btn btn-outline-success btn-lg">
                            <i class="bi bi-whatsapp"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario de Contacto -->
        <div class="col-lg-8">
            <div class="contact-card">
                <h3 class="fw-bold mb-4">Envíanos un Mensaje</h3>

                <form asp-controller="Institucional" asp-action="EnviarContacto" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label">Nombre Completo *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Tu nombre">
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" placeholder="+51 999 999 999">
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Asunto" class="form-label">Asunto *</label>
                            <input asp-for="Asunto" class="form-control" placeholder="¿En qué podemos ayudarte?">
                            <span asp-validation-for="Asunto" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Mensaje" class="form-label">Mensaje *</label>
                            <textarea asp-for="Mensaje" class="form-control" rows="6"
                                      placeholder="Escribe tu mensaje aquí..."></textarea>
                            <span asp-validation-for="Mensaje" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <p class="text-muted small mb-3">
                                <i class="bi bi-info-circle"></i>
                                Los campos marcados con * son obligatorios
                            </p>
                            <button type="submit" class="btn-submit">
                                <i class="bi bi-send-fill"></i> Enviar Mensaje
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Mapa -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="contact-card">
                <h3 class="fw-bold mb-4">
                    <i class="bi bi-map"></i> Ubicación
                </h3>
                <div style="border-radius: 15px; overflow: hidden; height: 400px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.3067156842314!2d-77.0364!3d-12.0964!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDA1JzQ3LjAiUyA3N8KwMDInMTEuMCJX!5e0!3m2!1ses!2spe!4v1234567890"
                            width="100%"
                            height="400"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}