@model List<WebFront.Models.CarritoModel>

@{
    ViewData["Title"] = "Mi Carrito";
    Layout = "_LayoutCliente";
    var total = Model.Sum(x => x.Subtotal);
}

<style>
    .cart-card {
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
        transition: .3s;
    }

        .cart-card:hover {
            transform: translateY(-5px);
        }

    .cart-img {
        width: 90px;
        height: 90px;
        object-fit: contain;
        background: #f8f9fa;
        border-radius: 12px;
        padding: 10px;
    }

    .cart-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: #5a67d8;
    }

    .summary-card {
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,.12);
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: #fff;
    }

    .summary-total {
        font-size: 2rem;
        font-weight: 800;
    }
</style>

<div class="container">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-cart3 me-2"></i> Mi Carrito
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size:4rem;"></i>
            <h4 class="mt-3">Tu carrito está vacío</h4>
            <p class="text-muted">Explora nuestros productos y empieza a comprar</p>

            <a asp-controller="Catalogo" asp-action="Index"
               class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-shop"></i> Ir al Catálogo
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">

            <!-- LISTA DE PRODUCTOS -->
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card cart-card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-3">
                                <img src="@item.ImagenUrl" class="cart-img" />

                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1">@item.NombreProducto</h6>
                                    <small class="text-muted">
                                        Cantidad: @item.Cantidad
                                    </small>
                                </div>

                                <div class="text-end">
                                    <div class="cart-price">
                                        S/ @item.Subtotal
                                    </div>

                                    <a asp-action="Eliminar"
                                       asp-route-idProducto="@item.IdProducto"
                                       class="btn btn-outline-danger btn-sm mt-2">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- RESUMEN -->
            <div class="col-lg-4">
                <div class="card summary-card p-4 sticky-top" style="top:100px;">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-receipt me-2"></i> Resumen
                    </h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Productos</span>
                        <span>@Model.Sum(x => x.Cantidad)</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span>Total</span>
                        <span class="summary-total">S/ @total</span>
                    </div>

                    <a asp-controller="Checkout"
                       asp-action="Index"
                       class="btn btn-light btn-lg w-100 fw-bold">
                        Continuar con el pago →
                    </a>

                    <a asp-controller="Catalogo"
                       asp-action="Index"
                       class="btn btn-outline-light mt-3">
                        ← Seguir comprando
                    </a>
                </div>
            </div>

        </div>
    }
</div>
